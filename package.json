{
  "name": "@openforge/main-website",
  "private": true,
  "version": "0.0.0",
  "description": "Website for OpenForge",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --prerender",
    "cz": "git-cz",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "lint": "tslint -p ./tsconfig.json --exclude '**/*.d.ts'",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "dependencies": {
    "@stencil/core": "^0.7.2",
    "@stencil/router": "latest"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/jest": "^21.1.1",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.16",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^21.2.1",
    "prettier": "^1.11.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openforge/main-website.git"
  },
  "author": "OpenForge Team",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/openforge/main-website"
  },
  "homepage": "https://www.openforge.io",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
